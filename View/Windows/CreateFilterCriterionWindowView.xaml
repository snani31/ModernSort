<customCtrs:BaseWindow x:Class="ModernSort.View.Windows.CreateFilterCriterionWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customCtrs ="clr-namespace:ModernSort.CustomeControls.CustomUIControls"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        mc:Ignorable="d"
        Title="EditMediaObjectWindowView" 
        Height="700" 
        Width="900"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ClipToBounds="False"
        MouseLeftButtonDown="Window_DragHandler"
        >
    <Border
       
    Background= "#f7f9fe"
    CornerRadius="20"
    ClipToBounds="True"
    >
        <Grid>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition 
                    Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border
                Grid.Column="0"
                Grid.ColumnSpan="1"
                CornerRadius="20,20,0,0"
                Background="#512f95"
                BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Column="1"
              ToolTip="Hide"
                 Click="HideButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/circleWhite64px.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
              ToolTip="Maximize"
                 Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/CollapseWindpwIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3"
             Command="{Binding CloseDialog}"
             ToolTip="Close">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/PowerOffButtonIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#a1261d"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <Grid
                    Grid.Row="1"
                    >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="AddNewFilterButton"
                        Style="{StaticResource Button}"
                        Content="Add Filter"
                        Foreground="Red"
                        FontSize="30"
                        Background="#512f95"
                        Command="{Binding CreateFilter}"
                     />

                    <TextBox
                        TextAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        x:Name="TytleTbx"
                        ToolTip="Category  Descryption"
                        FontSize="30"
                        Foreground="#6795de"
                        Background="Transparent"
                        TextWrapping="Wrap"
                        Width="200"
                        Text="{Binding Tytle}"
                        Margin="20 20 20 10"
                        Padding="10"
                        >
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}" 
                                   BasedOn="{StaticResource ResourceKey=UnderlineTextBoxStyle}">
                                <Setter Property="Validation.ErrorTemplate">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Border
                                                BorderBrush="MediumVioletRed" 
                                                BorderThickness="3"
                                                >
                                                <AdornedElementPlaceholder />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Border 
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        Background="#ccd5f0"
                        Margin="0 0 0 20"
                        CornerRadius="0 0 20 0"
                        >

                        <ListView
                            ScrollViewer.CanContentScroll="False"
                            HorizontalContentAlignment="Stretch"
                            BorderThickness="0"
                            ItemsSource="{Binding CreatedFilters}"
                            Background="Transparent"
                            Padding="0 10 20 10"
                            ItemContainerStyle="{StaticResource RankingListItemStyle}"
                              >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        HorizontalAlignment="Stretch"
                                        >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            HorizontalAlignment="Left"
                                            Foreground="{Binding 
                                            Path=Foreground, 
                                            RelativeSource={RelativeSource AncestorType=ListViewItem,Mode=FindAncestor}}"
                                            
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            x:Name="TytleTbx"
                                            FontSize="20"
                                            TextWrapping="Wrap"
                                            Background="Transparent"
                                            Style="{StaticResource UnderlineTextBoxStyle}"
                                            Text="{Binding ConditionTytle, Mode=TwoWay}"
                                            Width="250"
                                            Height="50"
                                            Margin="30 0 0 0"
                                            />

                                        <Button
                                            HorizontalAlignment="Right"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Command="{Binding DataContext.RemoveFilterFromList,
                                                RelativeSource={RelativeSource AncestorType=ListView,Mode=FindAncestor}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Remove"
                                            Width="50"
                                            Height="50"
                                            >
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Image x:Name="icon" Margin="5" Source="\AppResources\Pictures\PentagonBorderRedCross.png"/>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="icon" Property="Source" Value="\AppResources\Pictures\PentagonWhiteCross.png" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                            </ListView.Resources>
                        </ListView>

                    </Border>

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        x:Name="DeskriptionTbox"
                        ToolTip="Category  Descryption"
                        FontSize="30"
                        Foreground="#6795de"
                        TextWrapping="Wrap"
                        Background="#ccd5f0"
                        Style="{StaticResource TuskDataTextBoxStyle}"
                        Text="{Binding Descriptyon}"
                        Margin="20"
                        Padding="15"
                        />

                    <Border
                        Margin="0 10 0 0"
                        CornerRadius="0  60 0 20"
                        Background="#512f95"
                        Grid.Row="2"
                        Grid.ColumnSpan="1"
                        Grid.Column="0"
                        >
                        <TextBlock
                            Margin="15 0 20 0"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="#f7f9fe"
                            FontSize="20"
                            Style="{StaticResource SpanDefoult}"
                            >
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ValidationStringConverter}">
                                    <Binding
                                        ElementName="TytleTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                    <Binding
                                        ElementName="DescryptioonTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>

                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        Style="{StaticResource Button}"
                        Background="#512f95"
                        Margin="10"
                        Content="Create"
                        Command="{Binding CreateFilterCriterionCommand}"
                        />

                </Grid>
            </Grid>
        </Grid>
    </Border>
</customCtrs:BaseWindow>
