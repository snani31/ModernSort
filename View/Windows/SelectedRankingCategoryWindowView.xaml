<Window x:Class="ModernSort.View.Windows.SelectedRankingCategoryWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vmsWin="clr-namespace:ModernSort.ViewModel.Windows"
        xmlns:vmsPgs="clr-namespace:ModernSort.ViewModel.Pages"
        xmlns:viewPgs="clr-namespace:ModernSort.View.Pages"
        xmlns:customUI="clr-namespace:ModernSort.CustomeControls"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="SelectedRankingCategoryWindowView" 
        Height="800" 
        Width="1100"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        >
    <Window.DataContext>
        <vmsWin:SelectedRankingCategoryViewModel/>
    </Window.DataContext>
    <Border
    Background="#f7f9fe" 
    CornerRadius="20"
    ClipToBounds="True"
    >
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition
                Height="50"
                />
                <RowDefinition
                Height="*"
                />
            </Grid.RowDefinitions>
            <Border
                 Grid.Column="0"
                 Grid.ColumnSpan="1"
                 CornerRadius="20,20,0,0"
                 Background="#512f95"
                 BorderThickness="0"
                 >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="2"
             Command="{Binding CloseDialog}"
             ToolTip="Закрыть">
                        <Button.Template> 
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="5" Source="\AppResources\PowerOffButtonIcon.png"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="#a1261d"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1"
             Command="{Binding CollapselicationCommand}"
             ToolTip="Свернуть">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="5" Source="\AppResources\CollapseWindpwIcon.png"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Background="#6795de"  
                        >
                        <TextBox
                            Style="{StaticResource TuskDataTextBoxStyle}"
                            Margin="20 10 150 10"
                            />
                    </Border>

                    <Border
                        Margin="20 0 0 0"
                         Grid.Column="1"
                         Background="#ccd5f0"  
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>


                            <customUI:MenuRadiobutton
                                Command="{Binding SetMediaObjectPageValue}" 
                                Grid.Column="0" 
                                Style="{StaticResource MenuRadiobuttonStyle}"
                                    >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Margin="10"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Source="\AppResources\Pictures\galleryWhite.png"/>

                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Grid.Column="1"
                                        Text="Medias" 
                                        Margin="0 0 40 10"
                                        Style="{StaticResource SpanDefoult}"
                                        FontSize="40"
                                        FontWeight="DemiBold"
                                        />
                                </Grid>
                            </customUI:MenuRadiobutton>

                            <customUI:MenuRadiobutton
                                        Command="{Binding SetFiltrationPageValue}" 
                                        Grid.Column="1" 
                                        Style="{StaticResource MenuRadiobuttonStyle}"
                                            >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Margin="10"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Source="\AppResources\Pictures\filterWhite.png"/>

                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Grid.Column="1"
                                        Text="Filters"
                                        Margin="0 0 40 10"
                                        Style="{StaticResource SpanDefoult}"
                                        FontSize="40"
                                        FontWeight="DemiBold"
                                        />
                                </Grid>
                            </customUI:MenuRadiobutton>
                        </Grid>
                    </Border>

                </Grid>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border 
                        x:Name="SelectedObjectView"
                        Grid.Column ="1"
                        ClipToBounds="True"
                        Background="#ccd5f0"
                        CornerRadius="0 0 20 20"
                        Margin="20 0 0 20">
                        <Grid>
                            <Grid.Resources>
                                <DataTemplate DataType="{x:Type vmsPgs:SelectedMediaObjectPageViewModel}">
                                    <viewPgs:SelectedMediaObjectPage/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type vmsPgs:FiltrationPageViewModel}">
                                    <viewPgs:FiltrationPage/>
                                </DataTemplate>
                            </Grid.Resources>
                            <ContentControl Content="{Binding CurrentPage}"/>
                        </Grid>
                    </Border>
                    <Border 
                        x:Name="MediaObjactsArea"
                        BorderThickness="5"
                        BorderBrush="#653bbb"
                        Grid.Column="0"
                        Background="Transparent"
                        CornerRadius="20"
                        Margin="20">

                        <ListView
                            
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            HorizontalContentAlignment="Center"
                            x:Name="MediaObjactsList"
                            ItemContainerStyle="{StaticResource MediaObjactContenerStyle}"
                            ItemsSource="{Binding MediaObjacts}"
                            SelectedItem="{Binding SelectedMediaObjectItem, Mode=OneWayToSource}"
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="0 10 0 0"
                                 >       
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                        Background="Transparent"
                                        x:Name="brd" 
                                        Margin="10" 
                                        Width="200" 
                                        MinHeight="200" 
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border 
                                                x:Name="InBrd"
                                                Grid.Row="0"
                                                Margin="5 10 5 5"
                                                CornerRadius="5"
                                                Background="#ccd5f0"
                                                Padding="4"
                                                Width="150"
                                                Height="150">
                                                <Image
                                                    Stretch="Fill"
                                                    Width="140"
                                                    Height="140"
                                                    
                                                    Source="{Binding Path =FirstImagePath, 
                                                    Converter={StaticResource ToBitmapConverter}}"
                                                    
                                                       />
                                            </Border>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock 
                                                    Grid.Column="0"
                                                    x:Name="txt"
                                                    TextAlignment="Center"
                                                    FontWeight="DemiBold"
                                                    Margin="5"
                                                    Foreground="#653bbb"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Bottom"
                                                    Width="auto"
                                                    Text="{Binding Tytle}"
                                                    FontSize="12"/>
                                                <TextBlock 
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    x:Name="txtCount"
                                                    TextAlignment="Right"
                                                    FontWeight="DemiBold"
                                                    Foreground="#653bbb"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Width="auto"
                                                    Text="{Binding Path=Paths.Count}"
                                                    FontSize="20"/>
                                            </Grid>

                                        </Grid>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.OpenMediaObjectPage, RelativeSource={RelativeSource AncestorType=ListView,AncestorLevel=1}}"
                                                                       CommandParameter="{Binding}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="brd" Property="Background" Value="#653bbb" />
                                            <Setter TargetName="txt" Property="Foreground" Value="#f7f9fe" />
                                            <Setter TargetName="txtCount" Property="Foreground" Value="#f7f9fe" />
                                        </MultiTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel 
                                        Orientation="Horizontal"  
                                        HorizontalAlignment="Center"
                                        />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>

                    </Border>
                </Grid>
                <Border 
                    x:Name="MultiFunktionArea"
                    Background="#efefff" 
                    Grid.Row="2">
                    <StackPanel
                        Orientation="Horizontal"
                        >
                        <Button
                            Background="#512f95"
                            Style="{StaticResource Button}"
                            Margin="15"
                            Width="300"
                            Command="{Binding CreateMediaObjectWindowOpen}"
                            Content="Create MediaObject"
                            >
                        </Button>
                        <Button
                             Background="#512f95"
                             Style="{StaticResource Button}"
                             Margin="15"
                             Width="300"
                             Command="{Binding EditMediaObjectWindowOpen}"
                             Content="Edit MediaObject"
                            />
                        <Button
                             Background="#512f95"
                             Style="{StaticResource Button}"
                             Margin="15"
                             Width="300"
                             Command="{Binding CreateFilterCriterionWindowOpen}"
                             Content="CreateFilterCriterion"
                            />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
