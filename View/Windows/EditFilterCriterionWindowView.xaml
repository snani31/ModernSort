<customCtrs:BaseWindow x:Class="ModernSort.View.Windows.EditFilterCriterionWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customCtrs ="clr-namespace:ModernSort.CustomeControls.CustomUIControls"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        mc:Ignorable="d"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ClipToBounds="False"
        Title="EditFilterCriterionWindowView" 
        Height="600" 
        Width="900"
        MouseLeftButtonDown="Window_DragHandler">
    <Border
       
Background= "#f7f9fe"
CornerRadius="20"
ClipToBounds="True"
    >
        <Grid>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition 
                    Height="50"
             />
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border
                Grid.Column="0"
                Grid.ColumnSpan="1"
                CornerRadius="20,20,0,0"
                Background="#512f95"
                BorderThickness="0"
         >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Column="1"
              ToolTip="Hide"
                 Click="HideButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/circleWhite64px.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
              ToolTip="Maximize"
                 Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/CollapseWindpwIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3"
             Command="{Binding CloseDialog}"
             ToolTip="Close">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/Pictures/PowerOffButtonIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#a1261d"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <Grid
                Grid.Row="1"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>


                    <TextBox
                        TextAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        x:Name="TytleTbx"
                        ToolTip="Category  Descryption"
                        FontSize="30"
                        Foreground="#6795de"
                        Background="Transparent"
                        TextWrapping="WrapWithOverflow"
                        MinWidth="200"
                        HorizontalContentAlignment="Stretch"
                        Style="{StaticResource UnderlineTextBoxStyle}"
                        Text="{Binding Tytle, Mode=TwoWay}"
                        Margin="100 0 20 35"
                        Padding="10"
                        />

                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="10"
                        ToolTip="Delete Category"
                        Command="{Binding RemoveFilterCriterion}"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    x:Name="brd"
                                    CornerRadius="10"
                                    BorderThickness="5"
                                    BorderBrush="#bb432c"
                                    Background="Transparent"
                                    >
                                    <Image
                                        x:Name="img"
                                        Margin="5"
                                        Source="/AppResources/Pictures/trashCanCloseRed.png"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                        Value="true">
                                        <Setter 
                                            TargetName="img" 
                                            Property="Source"
                                            Value="\AppResources\Pictures\trashCanOpenWhite.png"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="Background"
                                            Value="#bb432c"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="BorderThickness"
                                            Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        ToolTip="Delete Category"
                        Command="{Binding CreateNewFilterInList}"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    x:Name="brd"
                                    BorderThickness="5 0 0 0"
                                    BorderBrush="#512f95"
                                    Background="Transparent"
                                    >
                                    <Image
                                        x:Name="img"
                                        Margin="15"
                                        Source="/AppResources/Pictures/addPlusPurple.png"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                        Value="true">
                                        <Setter 
                                            TargetName="img" 
                                            Property="Source"
                                            Value="\AppResources\Pictures\addPlusWhiteNoBorder.png"/>
                                        <Setter 
                                            TargetName="img" 
                                            Property="Margin"
                                            Value="25"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="Background"
                                            Value="#512f95"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="BorderThickness"
                                            Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <TextBox
                        x:Name="DescryptioonTbx"
                        ToolTip="Category  Descryption"
                        Grid.Row="1"
                        FontSize="30"
                        Foreground="#6795de"
                        TextWrapping="Wrap"
                        Background="#ccd5f0"
                        Text="{Binding Descriptyon, Mode=TwoWay}"
                        Style="{StaticResource TuskDataTextBoxStyle}"
                        Margin="10"
                        Padding="10"
                        />



                    <ListView
                        Grid.Row="1"
                        Grid.Column="1"
                        ScrollViewer.CanContentScroll="False"
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        ItemsSource="{Binding SelectedFilters}"
                        Background="Transparent"
                        Padding="0 10 20 10"
                        ItemContainerStyle="{StaticResource RankingListItemStyle}"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    HorizontalAlignment="Stretch"
                                    >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        HorizontalAlignment="Left"
                                        Foreground="{Binding 
                                        Path=Foreground, 
                                        RelativeSource={RelativeSource AncestorType=ListViewItem,Mode=FindAncestor}}"
                     
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        x:Name="TytleTbx"
                                        FontSize="20"
                                        TextWrapping="Wrap"
                                        Background="Transparent"
                                        Style="{StaticResource UnderlineTextBoxStyle}"
                                        Text="{Binding ConditionTytle, Mode=TwoWay}"
                                        Width="250"
                                        Height="50"
                                        Margin="30 0 0 0"
                                        />

                                    <Button
                                        HorizontalAlignment="Right"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.RemoveSelectedFilterFromList,
                                            RelativeSource={RelativeSource AncestorType=ListView,Mode=FindAncestor}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Remove"
                                        Width="50"
                                        Height="50"
                                        >
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Image x:Name="icon" Margin="5" Source="\AppResources\Pictures\PentagonBorderRedCross.png"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="icon" Property="Source" Value="\AppResources\Pictures\PentagonWhiteCross.png" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                        </ListView.Resources>
                    </ListView>

                    <Button
                        Style="{StaticResource Button}"
                        Background="#512f95"
                        Margin="10"
                        Grid.Row="2"
                        Content="Apply Edit"
                            Command="{Binding EditFilterCriterion}"
                        />

                    
                    <Border
                        Margin="0 10 0 0"
                        CornerRadius="60  0 20 0"
                        Background="#512f95"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"  
                        >
                        <TextBlock
                            Margin="15 0 20 0"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="#f7f9fe"
                            FontSize="20"
                            Style="{StaticResource SpanDefoult}"
                            >
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ValidationStringConverter}">
                                    <Binding
                                        ElementName="TytleTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                    <Binding
                                        ElementName="DescryptioonTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding
                                        ElementName="FilterFilePresenterGrid.MediaFilesLists" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>


                </Grid>

            </Grid>

        </Grid>
    </Border>
</customCtrs:BaseWindow>
