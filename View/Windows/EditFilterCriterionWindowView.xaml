<customCtrs:BaseWindow x:Class="ModernSort.View.Windows.EditFilterCriterionWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customCtrs ="clr-namespace:ModernSort.CustomeControls.CustomUIControls"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        mc:Ignorable="d"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ClipToBounds="False"
        Title="EditFilterCriterionWindowView" 
        Height="620" 
        Width="900"
        MouseLeftButtonDown="Window_DragHandler"
                       >
    <Border
       
Background= "{DynamicResource MeinBackgroundColor}"
CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=MainBorderCornerRadius}"
ClipToBounds="True"
    >
        <Grid>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition 
                    Height="50"
             />
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    d:CornerRadius="20,20,0,0"
                    CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopButtonsBarBorderCornerRadius}"
                    Background="{DynamicResource MeinThemeColor}"
                    BorderThickness="0"
         >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Column="1"
              ToolTip="Hide"
                 Click="HideButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="8" Source="{DynamicResource MinimizeBordered}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
              ToolTip="Maximize"
                 Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="8" Source="{DynamicResource MaximizeBordered}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3"
             Command="{Binding CloseDialog}"
             ToolTip="Close">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopRightCloseButtonBorderCornerRadius}">
                                        <Image Margin="10" Source="{DynamicResource PowerOffMeinBackgroundImage}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource ContrastingColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <Grid
                Grid.Row="1"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>


                    <TextBox
                        TextAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        x:Name="TytleTbx"
                        FontSize="30"
                        Foreground="{DynamicResource MeinThemeColor2}"
                        Background="Transparent"
                        TextWrapping="WrapWithOverflow"
                        MinWidth="200"
                        HorizontalContentAlignment="Stretch"
                        Style="{StaticResource UnderlineTextBoxStyle}"
                        Text="{Binding Tytle, Mode=TwoWay}"
                        Margin="100 0 20 35"
                        Padding="10"
                        >
                        <TextBox.ToolTip>
                            <customCtrs:CustomTooltip
                                ContentText="Discryption"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor}"
                                BorderBrush="{DynamicResource MeinThemeColor}"
                                Placement="MousePoint"
                                />
                        </TextBox.ToolTip>
                    </TextBox>


                    <customCtrs:CustomButton
                       Grid.Row="0"
                        Grid.Column="2"
                        Margin="10"
                        Command="{Binding RemoveFilterCriterion}"
                        FirstButtonColor="{DynamicResource ContrastingColor}"
                        SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                        CornerRadius="10"
                        BorderThickness="5"
                        ImageMargin="5"
                        TextBlockHorizontalAlignment ="Left"
                        DefoultImageSource="{DynamicResource TrashCanContrasting}"
                        MouseHoverImageSource="{DynamicResource TrashCanBordered}"
                        >
                        <customCtrs:CustomButton.ToolTip>
                            <customCtrs:CustomTooltip
                                ContentText="Delete filter criterion"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor}"
                                BorderBrush="{DynamicResource MeinThemeColor}"
                                Placement="MousePoint"
                                />
                        </customCtrs:CustomButton.ToolTip>
                    </customCtrs:CustomButton>


                    <customCtrs:CustomButton
                        Grid.Row="1"
                        Grid.Column="2"
                        ToolTip="Add new condition"
                        BorderThickness="4 0 0 0"
                        FirstButtonColor="{DynamicResource MeinThemeColor}"
                        SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                        ImageMargin="15"
                        Command="{Binding CreateNewFilterInList}"
                        DisabledImageSource="{DynamicResource PlusListBordered2}"
                        DefoultImageSource="{DynamicResource PlusListMein}"
                        MouseHoverImageSource="{DynamicResource PlusListBordered}"
                        />

                    <TextBox
                        x:Name="DescryptioonTbx"
                        Grid.Row="1"
                        FontSize="30"
                        Foreground="{DynamicResource MeinThemeColor2}"
                        TextWrapping="Wrap"
                        Background="{DynamicResource DimBackgroundColor}"
                        Text="{Binding Descriptyon, Mode=TwoWay}"
                        Style="{StaticResource TuskDataTextBoxStyle}"
                        Margin="10 0 10 0"
                        Padding="10"
                        >
                        <TextBox.ToolTip>
                            <customCtrs:CustomTooltip
                                ContentText="Description"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor}"
                                BorderBrush="{DynamicResource MeinThemeColor}"
                                Placement="MousePoint"
                                />
                        </TextBox.ToolTip>
                    </TextBox>



                    <ListView
                        Grid.Row="1"
                        Grid.Column="1"
                        x:Name="FiltersListView"
                        ScrollViewer.CanContentScroll="False"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        ItemsSource="{Binding SelectedFilters}"
                        Background="{DynamicResource MeinColorBackgroundFillImage}"
                        Padding="0 10 20 10"
                          >
                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource RankingListItemStyle}"
                                   TargetType="{x:Type ListViewItem}">
                                <Style.Setters>
                                    <Setter Property="Margin"  Value="0 0 20 0"/>
                                </Style.Setters>   
                             </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.Style>
                            <Style 
                                TargetType="ListView"
                                BasedOn="{StaticResource RoundedListViewStyle}"
                                >
                                <Style.Setters>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListView">
                                                <Border
                                                    Name="brd"
                                                    CornerRadius="0 0 0 20"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    >
                                                    <ScrollViewer Padding="{TemplateBinding Padding}">
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Validation.HasError" Value="True">
                                                        <Setter TargetName="brd" Property="BorderThickness" Value="2 0 0 2"/>
                                                        <Setter TargetName="brd" Property="BorderBrush" Value="{DynamicResource ContrastingColor}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style.Setters>
                            </Style>
                        </ListView.Style>
                            <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    HorizontalAlignment="Stretch"
                                    >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        HorizontalAlignment="Left"
                                        Foreground="{Binding 
                                        Path=Foreground, 
                                        RelativeSource={RelativeSource AncestorType=ListViewItem,Mode=FindAncestor}}"
                     
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        x:Name="TytleTbx"
                                        FontSize="20"
                                        TextWrapping="Wrap"
                                        Background="Transparent"
                                        Style="{StaticResource UnderlineTextBoxStyle}"
                                        Text="{Binding ConditionTytle, Mode=TwoWay}"
                                        Width="250"
                                        Height="50"
                                        Margin="30 0 0 0"
                                        />

                                    <Button
                                        x:Name="WarningBtn"
                                        HorizontalAlignment="Right"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="50"
                                        Height="50"
                                        Visibility="Collapsed"
                                        >
                                        <Button.ToolTip>
                                            <customCtrs:CustomTooltip
                                                HeaderText="Warning !"
                                                ContentText="Filter Title is required field"
                                                Background="{DynamicResource MeinBackgroundColor}"
                                                Foreground="{DynamicResource MeinThemeColor}"
                                                BorderBrush="{DynamicResource MeinThemeColor}"
                                                Placement="MousePoint"
                                                />
                                        </Button.ToolTip>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Image x:Name="icon" Margin="5" Source="{DynamicResource ExclamationMarkContrasting}"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="icon" Property="Source" Value="{DynamicResource ExclamationMarkBordered}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button
                                        HorizontalAlignment="Right"
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.RemoveSelectedFilterFromList,
                                            RelativeSource={RelativeSource AncestorType=ListView,Mode=FindAncestor}}"
                                        CommandParameter="{Binding}"
                                        Width="50"
                                        Height="50"
                                        >
                                        <Button.ToolTip>
                                            <customCtrs:CustomTooltip
                                                ContentText="Remove"
                                                Background="{DynamicResource MeinBackgroundColor}"
                                                Foreground="{DynamicResource MeinThemeColor}"
                                                BorderBrush="{DynamicResource MeinThemeColor}"
                                                Placement="MousePoint"
                                                />
                                        </Button.ToolTip>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Image x:Name="icon" Margin="5" Source="{DynamicResource CrossPentagonContrasting}"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="icon" Property="Source" Value="{DynamicResource CrossPentagonBordered}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <Trigger SourceName="TytleTbx" Property="Validation.HasError" Value="True">
                                        <Setter TargetName="WarningBtn" Property="Visibility" Value="Visible" />
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                        </ListView.Resources>
                    </ListView>

                    <customCtrs:CustomButton
                        FirstButtonColor="{DynamicResource MeinThemeColor}"
                        SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                        DisabledStateColor="{DynamicResource DimBackgroundColor}"
                        Margin="10"
                        Grid.Row="2"
                        Command="{Binding EditFilterCriterion}"
                        CornerRadius="10"
                        BorderThickness="4"
                        FontSize="30"
                        Text="Apply Edit"
                        ImageMargin="5"
                        TextBlockHorizontalAlignment ="Center"
                        DisabledImageSource="{DynamicResource PencilEditBordered2}"
                        DefoultImageSource="{DynamicResource PencilEditMein}"
                        MouseHoverImageSource="{DynamicResource PencilEditBordered}"
                        />
                    
                    <Border
                        Margin="0 10 0 0"
                        d:CornerRadius="60  0 20 0"
                        CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=BottonRightElementBorderCornerRadius}"
                        Background="{DynamicResource MeinThemeColor}"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"  
                        >
                        <TextBlock
                            Margin="15 0 20 0"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="{DynamicResource MeinBackgroundColor}"
                            FontSize="20"
                            Style="{StaticResource SpanDefoult}"
                            >
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ValidationStringConverter}">
                                    <Binding
                                        ElementName="TytleTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                    <Binding
                                        ElementName="DescryptioonTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding
                                        ElementName="FiltersListView" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>


                </Grid>

            </Grid>

        </Grid>
    </Border>
</customCtrs:BaseWindow>
