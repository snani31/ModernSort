<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style 
        BasedOn="{StaticResource {x:Type TextBox}}"
        TargetType="TextBox"
        x:Key="TuskDataTextBoxStyle">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox" x:Name="ctrtmp">
                        <Border x:Name="brd" 
                            CornerRadius="15" 
                            Background ="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            MinHeight="{TemplateBinding Height}">
                            <Grid>
                                <Rectangle StrokeThickness="1"/>
                                <ScrollViewer 
                                x:Name="PART_ContentHost" 
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalContentAlignment="Center"
                                Margin="10,0,10,0"
                                Foreground="#CFCFCF"/>
                                <TextBlock 
                                MaxWidth="{TemplateBinding Width}"
                                x:Name="hint"
                                Text="{TemplateBinding Text}"
                                TextWrapping="Wrap"
                                IsHitTestVisible="False"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                FontSize="{TemplateBinding FontSize}"
                                Margin="15,0,0,0"
                                Foreground="{TemplateBinding Foreground}"
                                Visibility="Collapsed"
                                       >
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                            CornerRadius="15"
                            BorderBrush="{DynamicResource ContrastingColor}" 
                            BorderThickness="2"
                            >
                            <AdornedElementPlaceholder />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style 
    BasedOn="{StaticResource {x:Type TextBox}}"
    TargetType="TextBox"
    x:Key="UnderlineTextBoxStyle">
        <Style.Setters>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox" x:Name="ctrtmp">
                        <Border 
                            x:Name="brd" 
                            Background ="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            MinHeight="{TemplateBinding Height}"
                            BorderThickness="0 0 0 2"
                            BorderBrush="{DynamicResource MeinThemeColor}"
                            VerticalAlignment="Bottom"
                                >
                            <Grid>
                                <Rectangle StrokeThickness="1"/>
                                <ScrollViewer 
                            x:Name="PART_ContentHost" 
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="10,0,10,0"
                            Foreground="#CFCFCF"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Validation.HasError" Value="true">
                                <Setter TargetName="brd" Property="BorderThickness" Value="0 0 0 2"/>
                                <Setter TargetName="brd" Property="BorderBrush" Value="{DynamicResource ContrastingColor}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>