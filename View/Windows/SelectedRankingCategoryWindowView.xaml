<Window x:Class="ModernSort.View.Windows.SelectedRankingCategoryWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:ModernSort.ViewModel.Windows"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        mc:Ignorable="d"
        Title="SelectedRankingCategoryWindowView" 
        Height="800" 
        Width="1100"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        >
    <Window.DataContext>
        <vms:SelectedRankingCategoryViewModel/>
    </Window.DataContext>
    <Border
    Background="#f7f9fe" 
    CornerRadius="20"
    ClipToBounds="True"
    >
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition
                Height="50"
                />
                <RowDefinition
                Height="*"
                />
            </Grid.RowDefinitions>
            <Border
                 Grid.Column="0"
                 Grid.ColumnSpan="1"
                 CornerRadius="20,20,0,0"
                 Background="#512f95"
                 BorderThickness="0"
                 >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="2"
             Command="{Binding CloseDialog}"
             ToolTip="Закрыть">
                        <Button.Template> 
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="5" Source="\AppResources\PowerOffButtonIcon.png"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="#a1261d"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1"
             Command="{Binding CollapselicationCommand}"
             ToolTip="Свернуть">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="5" Source="\AppResources\CollapseWindpwIcon.png"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>
                <Border
                    x:Name="FilterCriteriesArea"
                    Grid.Row="0"
                    Background="#6795de" 
                    CornerRadius="0 0 20 20"
                    />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border 
                        x:Name="SelectedObjactView"
                        Grid.Column ="1"
                        ClipToBounds="True"
                        Background="#ccd5f0"
                        CornerRadius="20"
                        Margin="20">
                    </Border>
                    <Border 
                        x:Name="MediaObjactsArea"
                        BorderThickness="5"
                        BorderBrush="#653bbb"
                        Grid.Column="0"
                        Background="Transparent"
                        CornerRadius="20"
                        Margin="20">

                        <ListView
                            
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            HorizontalContentAlignment="Center"
                            x:Name="MediaObjactsList"
                            ItemContainerStyle="{StaticResource MediaObjactContenerStyle}"
                            ItemsSource="{Binding MediaObjacts}"
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="0 10 0 0"
                                 >       
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                        Background="Transparent"
                                        x:Name="brd" 
                                        Margin="10" 
                                        Width="200" 
                                        MinHeight="200" 
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border 
                                                x:Name="InBrd"
                                                Grid.Row="0"
                                                Margin="5 10 5 5"
                                                CornerRadius="5"
                                                Background="#ccd5f0"
                                                Padding="4"
                                                Width="150"
                                                Height="150">
                                                <Image
                                                    Stretch="Fill"
                                                    Width="140"
                                                    Height="140"
                                                    Source="{Binding FirstImagePath}"
                                                       />
                                            </Border>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock 
                                                    Grid.Column="0"
                                                    x:Name="txt"
                                                    TextAlignment="Center"
                                                    FontWeight="DemiBold"
                                                    Margin="5"
                                                    Foreground="#653bbb"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Bottom"
                                                    Width="auto"
                                                    Text="{Binding Tytle}"
                                                    FontSize="12"/>
                                                <TextBlock 
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    x:Name="txtCount"
                                                    TextAlignment="Right"
                                                    FontWeight="DemiBold"
                                                    Foreground="#653bbb"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Width="auto"
                                                    Text="{Binding Path=Paths.Count}"
                                                    FontSize="20"/>
                                            </Grid>
                                            
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="brd" Property="Background" Value="#653bbb" />
                                            <Setter TargetName="txt" Property="Foreground" Value="#f7f9fe" />
                                            <Setter TargetName="txtCount" Property="Foreground" Value="#f7f9fe" />
                                        </MultiTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel 
                                        Orientation="Horizontal"  
                                        HorizontalAlignment="Center"
                                        />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>

                    </Border>
                </Grid>
                <Border 
                    x:Name="MultiFunktionArea"
                    Background="#efefff" 
                    Grid.Row="2">
                    <StackPanel
                        Orientation="Horizontal"
                        >
                        <Button
                            Style="{StaticResource Button}"
                            Margin="15"
                            Width="300"
                            Command="{Binding CreateMediaObjectWindowOpen}"
                            Content="Create MediaObject"
                            >
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
