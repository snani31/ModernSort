<UserControl x:Class="ModernSort.View.Pages.SelectedMediaObjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernSort.View.Pages"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Border
        Background="Transparent"
        d:Background="Aqua"
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Rectangle
                     Grid.Row="0"
                    Margin="10"
                    RadiusX="20"
                    RadiusY="20"
                    >
                <Rectangle.Fill>
                    <ImageBrush
                Stretch="Fill"
                ImageSource="{Binding ElementName=MediaFilesList, Path=SelectedItem, 
                        Converter={StaticResource ToBitmapConverter}}"/>
                </Rectangle.Fill>
            </Rectangle>
            <Border
                CornerRadius="15 15 20 20"
                Background="White"
                Grid.Row="1">
                <Grid
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button
                        Content="Лево"
                        Grid.Column="0"
                        Command="{Binding ScrollPresenterLeft}"
                        ToolTip="Left scroll"
                        >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="brd"
                                    CornerRadius="0 0 0 20"
                                    Background="White"
                                    >
                                    <Image
                                        x:Name="img"
                                        Margin="10"
                                        Source="\AppResources\Pictures\leftArrowPurple.png"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                            Value="true">
                                        <Setter 
                                                TargetName="img" 
                                                Property="Source"
                                                Value="\AppResources\Pictures\leftArrowWhite.png"/>
                                        <Setter 
                                                TargetName="img" 
                                                Property="Margin"
                                                Value="20"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="Background"
                                            Value="#512f95"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="BorderThickness"
                                            Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Border
                        Grid.Column="1"
                        >
                        <ListView
                            BorderThickness="0"
                            SelectedIndex="{Binding Path=SelectedPathIndex}"
                       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                       ScrollViewer.VerticalScrollBarVisibility="Disabled"
                       HorizontalContentAlignment="Stretch"
                       VerticalContentAlignment="Stretch"
                       ItemsSource="{Binding MediaFiles}"
                       x:Name="MediaFilesList"
                       Background="Transparent"
                       >
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}" >
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="10 5 10 5"
                                                    >
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger 
                                                        Property="IsMouseOver"
                                                        Value="true">
                                                        <Setter 
                                                            Property="Background"
                                                            Value="#a0a7bd"/>
                                                        <Setter 
                                                            Property="BorderBrush"
                                                            Value="#a0a7bd"/>
                                                    </Trigger>
                                                    <Trigger 
                                                        Property="IsSelected"
                                                        Value="true">
                                                        <Setter 
                                                            Property="Background"
                                                            Value="#653bbb"/>
                                                        <Setter 
                                                            Property="BorderBrush"
                                                            Value="#492a87"/>
                                                        <Setter 
                                                            Property="BorderThickness"
                                                            Value="1"/>
                                                    </Trigger>
                                                    </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>

                                <DataTemplate>
                                    <Rectangle
                                     Width="100"
                                     x:Name="racImg"
                                     StrokeThickness="5"
                                     Grid.Row="1"
                                     RadiusX="10"
                                     RadiusY="10"
                                     >
                                        <Rectangle.Fill>
                                            <ImageBrush
                                                Stretch="Fill"
                                                ImageSource="{Binding Path=., Converter={StaticResource ToBitmapConverter}}"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <DataTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                        </MultiTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </Border>
                    <Button
                        Content="Лево"
                        Grid.Column="2"
                        Command="{Binding ScrollPresenterRight}"
                        ToolTip="Left scroll"
                        >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="brd"
                                    CornerRadius="0 0 20 0"
                                    Background="White"
                                    >
                                    <Image
                                        x:Name="img"
                                        Margin="10"
                                        Source="\AppResources\Pictures\rightArrowPurple.png"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                             Value="true">
                                        <Setter 
                                            TargetName="img" 
                                            Property="Source"
                                            Value="\AppResources\Pictures\rightArrowWhite.png"/>
                                        <Setter 
                                            TargetName="img" 
                                            Property="Margin"
                                            Value="20"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="Background"
                                            Value="#512f95"/>
                                        <Setter
                                            TargetName="brd" 
                                            Property="BorderThickness"
                                            Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
