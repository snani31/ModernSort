<customCtrs:BaseWindow x:Class="ModernSort.View.Windows.CreateFilterCriterionWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customCtrs ="clr-namespace:ModernSort.CustomeControls.CustomUIControls"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        mc:Ignorable="d"
        Title="EditMediaObjectWindowView" 
        Height="720" 
        Width="900"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ClipToBounds="False"
        MouseLeftButtonDown="Window_DragHandler"
        >
    <Border
       
    Background= "{DynamicResource MeinBackgroundColor}"
    CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=MainBorderCornerRadius}"
    ClipToBounds="True"
    >
        <Grid>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition 
                    Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    d:CornerRadius="20,20,0,0"
                    CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopButtonsBarBorderCornerRadius}"
                    Background="{DynamicResource MeinThemeColor}"
                    BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Column="1"
              ToolTip="Hide"
                 Click="HideButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="8" Source="{DynamicResource MinimizeBordered}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
              ToolTip="Maximize"
                 Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="8" Source="{DynamicResource MaximizeBordered}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3"
             Command="{Binding CloseDialog}"
             ToolTip="Close">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopRightCloseButtonBorderCornerRadius}">
                                        <Image Margin="10" Source="{DynamicResource PowerOffMeinBackgroundImage}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource ContrastingColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <Grid
                    Grid.Row="1"
                    >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <customCtrs:CustomButton
                        Grid.Column="0"
                        Grid.Row="0"
                        FontSize="35"
                        BorderThickness="0 0 4 4"
                        x:Name="AddNewFilterButton"
                        Text="Add Filter"
                        Command="{Binding CreateFilter}"
                        FirstButtonColor="{DynamicResource MeinThemeColor}"
                        SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                        TextBlockHorizontalAlignment ="Center"
                        ImageMargin="15"
                        DisabledImageSource="{DynamicResource PlusListBordered2}"
                        DefoultImageSource="{DynamicResource PlusListMein}"
                        MouseHoverImageSource="{DynamicResource PlusListBordered}"
                        />



                    <TextBox
                        TextAlignment="Center"
                        Grid.Row="0"
                        Style="{StaticResource ResourceKey=UnderlineTextBoxStyle}"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        x:Name="TytleTbx"
                        FontSize="30"
                        Foreground="{DynamicResource MeinThemeColor2}"
                        Background="Transparent"
                        TextWrapping="Wrap"
                        Width="200"
                        Text="{Binding Tytle}"
                        Margin="20 20 20 10"
                        Padding="10"
                        >
                        <TextBox.ToolTip>
                            <customCtrs:CustomTooltip
                                ContentText="Tytle"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor}"
                                BorderBrush="{DynamicResource MeinThemeColor}"
                                Placement="MousePoint"
                                />
                        </TextBox.ToolTip>
                    </TextBox>

                    <Border 
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        Background="{DynamicResource DimBackgroundColor}"
                        Margin="0 0 0 20"
                        CornerRadius="0 0 20 0"
                        >
                        <Border Background="{DynamicResource DimBackgroundColorFillImage}">
                            <ListView
                            x:Name="CreatedFiltersList"
                            ScrollViewer.CanContentScroll="False"
                            HorizontalContentAlignment="Stretch"
                            BorderThickness="0"
                            ItemsSource="{Binding CreatedFilters}"
                            Background="Transparent"
                            Padding="0 10 20 10"
                            ItemContainerStyle="{StaticResource RankingListItemStyle}"
                            Style="{StaticResource RoundedListViewStyle}"
                              >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                        x:Name="Grd"
                                        HorizontalAlignment="Stretch"
                                        >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="50"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox
                                            HorizontalAlignment="Left"
                                            Foreground="{Binding 
                                            Path=Foreground, 
                                            RelativeSource={RelativeSource AncestorType=ListViewItem,Mode=FindAncestor}}"
                                            
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            x:Name="TytleTbx"
                                            FontSize="20"
                                            TextWrapping="Wrap"
                                            Background="Transparent"
                                            Style="{StaticResource UnderlineTextBoxStyle}"
                                            Text="{Binding ConditionTytle, Mode=TwoWay}"
                                            Width="250"
                                            Height="50"
                                            Margin="30 0 0 0"
                                            />

                                                <Button
                                            x:Name="WarningBtn"
                                            HorizontalAlignment="Right"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="50"
                                            Height="50"
                                            Visibility="Collapsed"
                                            >
                                                <Button.ToolTip>
                                                    <customCtrs:CustomTooltip
                                                        HeaderText="Warning !"
                                                        ContentText="Filter title is required field"
                                                        Background="{DynamicResource MeinBackgroundColor}"
                                                        Foreground="{DynamicResource MeinThemeColor}"
                                                        BorderBrush="{DynamicResource MeinThemeColor}"
                                                        Placement="MousePoint"
                                                        />
                                                </Button.ToolTip>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Image x:Name="icon" Margin="5" Source="{DynamicResource ExclamationMarkContrasting}"/>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="icon" Property="Source" Value="{DynamicResource ExclamationMarkBordered}" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                                <Button
                                                    HorizontalAlignment="Right"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    Command="{Binding DataContext.RemoveFilterFromList,
                                                    RelativeSource={RelativeSource AncestorType=ListView,Mode=FindAncestor}}"
                                                    CommandParameter="{Binding}"
                                                    Width="50"
                                                    Height="50"
                                                    >
                                                <Button.ToolTip>
                                                    <customCtrs:CustomTooltip
                                                        ContentText="Remove"
                                                        Background="{DynamicResource MeinBackgroundColor}"
                                                        Foreground="{DynamicResource MeinThemeColor}"
                                                        BorderBrush="{DynamicResource MeinThemeColor}"
                                                        Placement="MousePoint"
                                                        />
                                                </Button.ToolTip>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Image x:Name="icon" Margin="5" Source="{DynamicResource CrossPentagonContrasting}"/>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="icon" Property="Source" Value="{DynamicResource CrossPentagonBordered}" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <Trigger SourceName="TytleTbx" Property="Validation.HasError" Value="True">
                                                    <Setter TargetName="WarningBtn" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                                    </ListView.Resources>
                                </ListView>
                            </Border>
                        </Border>

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        x:Name="DescryptioonTbx"
                        FontSize="30"
                        Foreground="{DynamicResource MeinThemeColor2}"
                        TextWrapping="Wrap"
                        Background="{DynamicResource DimBackgroundColor}"
                        Style="{StaticResource TuskDataTextBoxStyle}"
                        Text="{Binding Descriptyon}"
                        Margin="20"
                        Padding="15"
                        >
                        <TextBox.ToolTip>
                            <customCtrs:CustomTooltip
                                ContentText="Description"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor}"
                                BorderBrush="{DynamicResource MeinThemeColor}"
                                Placement="MousePoint"
                                />
                        </TextBox.ToolTip>
                    </TextBox>

                    <Border
                        Margin="0 10 0 0"
                        d:CornerRadius="0  60 0 20"
                        CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=BottonLeftElementBorderCornerRadius}"
                        Background="{DynamicResource MeinThemeColor}"
                        Grid.Row="2"
                        Grid.ColumnSpan="1"
                        Grid.Column="0"
                        >
                        <TextBlock
                            Margin="15 0 20 0"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="{DynamicResource MeinBackgroundColor}"
                            FontSize="20"
                            Style="{StaticResource SpanDefoult}"
                            >
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ValidationStringConverter}">
                                    <Binding
                                        ElementName="TytleTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                    <Binding
                                        ElementName="DescryptioonTbx" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                    <Binding
                                        ElementName="CreatedFiltersList" 
                                        Path= "(Validation.Errors)[0].ErrorContent"
                                        Mode="OneWay"
                                        />
                                    <Binding/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>

                    <customCtrs:CustomButton
                        FontSize="30"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        BorderThickness="4"
                        CornerRadius="10"
                        Text="Create filter criterion"
                        Command="{Binding CreateFilterCriterionCommand}"
                        FirstButtonColor="{DynamicResource MeinThemeColor}"
                        SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                        DisabledStateColor="{DynamicResource DimBackgroundColor}"
                        TextBlockHorizontalAlignment ="Left"
                        ImageMargin="15"
                        Margin="10"
                        DisabledImageSource="{DynamicResource EditGalleryBordered2}"
                        DefoultImageSource="{DynamicResource EditGalleryMein}"
                        MouseHoverImageSource="{DynamicResource EditGalleryBordered}"
                        />

                </Grid>
            </Grid>
        </Grid>
    </Border>
</customCtrs:BaseWindow>
