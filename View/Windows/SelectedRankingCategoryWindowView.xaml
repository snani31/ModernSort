<customCtrs:BaseWindow 
    x:Class="ModernSort.View.Windows.SelectedRankingCategoryWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmsWin="clr-namespace:ModernSort.ViewModel.Windows"
    xmlns:vmsPgs="clr-namespace:ModernSort.ViewModel.Pages"
    xmlns:viewPgs="clr-namespace:ModernSort.View.Pages"
    xmlns:customUI="clr-namespace:ModernSort.CustomeControls"
    xmlns:customCtrs ="clr-namespace:ModernSort.CustomeControls.CustomUIControls"
    xmlns:local="clr-namespace:ModernSort.View.Windows"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    Title="SelectedRankingCategoryWindowView" 
    Height="800" 
    Width="1100"
    WindowStyle="none"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_DragHandler"
        > 
    <Window.DataContext>
        <vmsWin:SelectedRankingCategoryViewModel/>
    </Window.DataContext>
    <Border
    Background="{DynamicResource MeinBackgroundColor}" 
    CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=MainBorderCornerRadius}"
    ClipToBounds="True"
    >
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition
                Height="50"
                />
                <RowDefinition
                Height="*"
                />
            </Grid.RowDefinitions>
            <Border
                Grid.Column="0"
                Grid.ColumnSpan="1"
                d:CornerRadius="20 20 0 0"
                CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopButtonsBarBorderCornerRadius}"
                Background="{DynamicResource MeinThemeColor}"
                BorderThickness="0"
                >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <Button Grid.Column="1"
         ToolTip="Закрыть"
            Click="HideButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="8" Source="{DynamicResource MinimizeBordered}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2"
                        ToolTip="Свернуть"
                        Click="MaximizeButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                    <Image Margin="8" Source="{DynamicResource MaximizeBordered}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="{DynamicResource DimMeinThemeColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="3"
        Command="{Binding CloseDialog}"
        ToolTip="Закрыть">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="0" Margin="0" Name="brd" Background="Transparent" CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=customCtrs:BaseWindow,Mode=FindAncestor},Path=TopRightCloseButtonBorderCornerRadius}">
                                    <Image Margin="10" Source="{DynamicResource PowerOffMeinBackgroundImage}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="brd" Property="Background" Value="{DynamicResource ContrastingColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Background="{DynamicResource MeinThemeColor}"
                        CornerRadius="0 0 20 0"
                        Margin="0 0 20 0"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <customCtrs:CustomButton
                                SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                                CornerRadius="15 0 0 15"
                                FirstButtonColor="{DynamicResource ContrastingColor}"
                                Margin="20 10 0 10"
                                Command="{Binding SetNotSearchedMediaObjectsState}"
                                ImageMargin="0 5 0 5"
                                DefoultImageSource="{DynamicResource RoundedCrossMein}"
                                MouseHoverImageSource="{DynamicResource RoundedCrossFillBordered}"
                                />

                            <TextBox
                               x:Name="SearchTbox"
                                ToolTip="Category  Descryption"
                                Grid.Column="1"
                                FontSize="25"
                                Background="{DynamicResource MeinBackgroundColor}"
                                Foreground="{DynamicResource MeinThemeColor2}"
                                TextWrapping="Wrap"
                                Padding="10"
                                Text="{Binding SearchMediaObjectQuery, Mode=TwoWay}"
                                Margin="0 10 20 10"
                                >
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}"
                                           BasedOn="{StaticResource TuskDataTextBoxStyle}">
                                        <Style.Setters>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border x:Name="brd" 
                                                                CornerRadius="0 15 15 0" 
                                                                Background ="{TemplateBinding Background}"
                                                                Width="{TemplateBinding Width}"
                                                                MinHeight="{TemplateBinding Height}">
                                                            <Grid>
                                                                <Rectangle StrokeThickness="1"/>
                                                                <ScrollViewer 
                                                                    x:Name="PART_ContentHost" 
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    VerticalContentAlignment="Center"
                                                                    Margin="10,0,10,0"
                                                                    Foreground="#CFCFCF"/>
                                                                <TextBlock 
                                                                    MaxWidth="{TemplateBinding Width}"
                                                                    x:Name="hint"
                                                                    Text="{TemplateBinding Text}"
                                                                    TextWrapping="Wrap"
                                                                    IsHitTestVisible="False"
                                                                    VerticalAlignment="Top"
                                                                    HorizontalAlignment="Left"
                                                                    FontSize="{TemplateBinding FontSize}"
                                                                    Margin="15,0,0,0"
                                                                    Foreground="{TemplateBinding Foreground}"
                                                                    Visibility="Collapsed"
                                                                           >
                                                                </TextBlock>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style.Setters>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <customCtrs:CustomButton
                                SecondButtonColor="{DynamicResource MeinThemeColor}"
                                CornerRadius="20 0 20 20"
                                FirstButtonColor="{DynamicResource DimMeinThemeColor}"
                                Grid.Column="2"
                                ImageMargin="10"
                                Command="{Binding SearchMediaObjact}"
                                DefoultImageSource="{DynamicResource MagnifierBordered}"
                                MouseHoverImageSource="{DynamicResource MagnifierBordered}"
                                />

                        </Grid>
                    </Border>

                    <Border
                        Margin="20 0 0 0"
                         Grid.Column="1"
                         Background="{DynamicResource DimBackgroundColor}"  
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <customCtrs:CustomRadioButton
                                Command="{Binding SetMediaObjectPageValue}" 
                                Grid.Column="0" 
                                IsEnabled="{Binding MediaObjectsListIsNotEmpthy}"
                                IsChecked="{Binding IsMediaObjectPageSelected, Mode=TwoWay}"
                                
                                Text="Medias"
                                FontSize="40"
                                
                                DefoultImageSource="{DynamicResource GalleryBordered}"
                                DisabledImageSource="{DynamicResource GalleryBordered}"
                                SelectedImageSource="{DynamicResource GalleryMein}"
                                MouseHoverImageSource="{DynamicResource GalleryBordered}"
                                
                                DefoultColor="{DynamicResource MeinThemeColor}"
                                MouseEnterColor="{DynamicResource ContrastingColor}"
                                SelectedColor="{DynamicResource DimBackgroundColor}"
                                DisabledColor ="{DynamicResource DimMeinThemeColor3}"
                                
                                DefoultTextColor="{DynamicResource MeinBackgroundColor}"
                                SelectedTextColor="{DynamicResource MeinThemeColor}"
                                
                                IndicatorLineColor="{DynamicResource MeinBackgroundColor}"
                                DirrectionType="HorizontalDownDirrection"
                                />


                            <customCtrs:CustomRadioButton
                                Command="{Binding SetFiltrationPageValue}" 
                                Grid.Column="1" 
                                IsEnabled="{Binding FilterCriterionsListIsNotEmpthy}"
                                IsChecked="{Binding IsFiltrationPageSelected, Mode=TwoWay}"
                                
                                Text="Filters"
                                FontSize="40"
                                
                                DefoultImageSource="{DynamicResource FilterBordered}"
                                DisabledImageSource="{DynamicResource FilterBordered}"
                                SelectedImageSource="{DynamicResource FilterMein}"
                                MouseHoverImageSource="{DynamicResource FilterBordered}"
                                
                                DefoultColor="{DynamicResource MeinThemeColor}"
                                MouseEnterColor="{DynamicResource ContrastingColor}"
                                SelectedColor="{DynamicResource DimBackgroundColor}"
                                DisabledColor ="{DynamicResource DimMeinThemeColor3}"
                                
                                DefoultTextColor="{DynamicResource MeinBackgroundColor}"
                                SelectedTextColor="{DynamicResource MeinThemeColor}"
                                
                                IndicatorLineColor="{DynamicResource MeinBackgroundColor}"
                                DirrectionType="HorizontalDownDirrection"
                                />
                            
                        </Grid>
                    </Border>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border 
                        x:Name="SelectedObjectView"
                        Grid.Column ="1"
                        ClipToBounds="True"
                        Background="{DynamicResource DimBackgroundColor}"
                        CornerRadius="0 0 20 20"
                        Margin="20 0 0 20">
                        <Grid>
                            <Grid.Resources>
                                <DataTemplate DataType="{x:Type vmsPgs:SelectedMediaObjectPageViewModel}">
                                    <viewPgs:SelectedMediaObjectPage/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type vmsPgs:FiltrationPageViewModel}">
                                    <viewPgs:FiltrationPage/>
                                </DataTemplate>
                            </Grid.Resources>
                            <ContentControl Content="{Binding CurrentPage}"/>
                        </Grid>
                    </Border>
                    <Border 
                        x:Name="MediaObjactsArea"
                        BorderThickness="5"
                        BorderBrush="{DynamicResource MeinThemeColor}"
                        Grid.Column="0"
                        CornerRadius="20"
                        Margin="20"
                        Background="{DynamicResource MeinColorBackgroundFillImage}">
                        <ListView
                            
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            HorizontalContentAlignment="Center"
                            x:Name="MediaObjactsList"
                            ItemContainerStyle="{StaticResource MediaObjactContenerStyle}"
                            ItemsSource="{Binding MediaObjacts}"
                            SelectedItem="{Binding SelectedMediaObjectItem, Mode=OneWayToSource}"
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="0 10 0 0"
                                 >       
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                        Background="Transparent"
                                        x:Name="brd" 
                                        Margin="10" 
                                        Width="200" 
                                        MinHeight="200" 
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border 
                                                x:Name="InBrd"
                                                Grid.Row="0"
                                                Margin="5 10 5 5"
                                                CornerRadius="5"
                                                Background="{DynamicResource DimBackgroundColor}"
                                                Padding="4"
                                                Width="150"
                                                Height="150">
                                                <Image
                                                    Stretch="Fill"
                                                    Width="140"
                                                    Height="140"
                                                    ToolTip="{Binding Descryption}"
                                                    Source="{Binding Path =FirstImagePath, 
                                                    Converter={StaticResource ToBitmapConverter}}"
                                                    
                                                       />
                                            </Border>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock 
                                                    Grid.Column="0"
                                                    x:Name="txt"
                                                    TextAlignment="Center"
                                                    FontWeight="DemiBold"
                                                    Margin="5"
                                                    Foreground="{DynamicResource FontColor2}"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Bottom"
                                                    Width="auto"
                                                    Text="{Binding Tytle}"
                                                    FontSize="16"/>
                                                <TextBlock 
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    x:Name="txtCount"
                                                    TextAlignment="Right"
                                                    FontWeight="DemiBold"
                                                    Foreground="{DynamicResource FontColor2}"
                                                    TextWrapping="Wrap"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Width="auto"
                                                    Text="{Binding Path=Paths.Count}"
                                                    FontSize="20"/>
                                            </Grid>

                                        </Grid>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.OpenMediaObjectPage, RelativeSource={RelativeSource AncestorType=ListView,AncestorLevel=1}}"
                                                                       CommandParameter="{Binding}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="brd" Property="Background" Value="{DynamicResource MeinThemeColor}" />
                                            <Setter TargetName="txt" Property="Foreground" Value="{DynamicResource FontColor1Hover2}" />
                                            <Setter TargetName="txtCount" Property="Foreground" Value="{DynamicResource FontColor1Hover2}" />
                                        </MultiTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel 
                                        Orientation="Horizontal"  
                                        HorizontalAlignment="Center"
                                        />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>

                    </Border>
                </Grid>
                <Border 
                    x:Name="MultiFunktionArea"
                    Background="{DynamicResource DimBackgroundColor2}" 
                    Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <customCtrs:CustomButton
                            FirstButtonColor="{DynamicResource MeinThemeColor}"
                            SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                            DisabledStateColor="{DynamicResource DimBackgroundColor}"
                            BorderThickness="4"
                            Margin="15"
                            Grid.Column="0"
                            Text="Create Media Object"
                            CornerRadius="10"
                            FontSize="22"
                            TextBlockHorizontalAlignment ="Left"
                            ImageMargin="15"
                            Command="{Binding CreateMediaObjectWindowOpen}"
                            DisabledImageSource="{DynamicResource AddMultimediaBordered2}"
                            DefoultImageSource="{DynamicResource AddMultimediaMein}"
                            MouseHoverImageSource="{DynamicResource AddMultimediaBordered}"
                                />

                        <customCtrs:CustomButton
                            FirstButtonColor="{DynamicResource MeinThemeColor}"
                            SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                            BorderThickness="4"
                            CornerRadius="10"
                            Margin="15"
                            Grid.Column="1"
                            FontSize="22"
                            Text="Edit Media Object"
                            TextBlockHorizontalAlignment ="Left"
                            Command="{Binding EditMediaObjectWindowOpen}"
                            ImageMargin="15"
                            DisabledImageSource="{DynamicResource BrushBordered2}"
                            DefoultImageSource="{DynamicResource BrushMein}"
                            MouseHoverImageSource="{DynamicResource BrushBordered}"
                            DisabledStateColor="{DynamicResource DimBackgroundColor}"
                                />


                        <customCtrs:CustomButton
                            FirstButtonColor="{DynamicResource MeinThemeColor}"
                            SecondButtonColor="{DynamicResource MeinBackgroundColor}"
                            DisabledStateColor="{DynamicResource DimBackgroundColor}"
                            BorderThickness="4 4 2 4"
                            CornerRadius="25 0 0 25"
                            Margin="15 15 0 15"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            FontSize="30"
                            Text="Create Filter Criterion"
                            TextBlockHorizontalAlignment ="Center"
                            Command="{Binding CreateFilterCriterionWindowOpen}"
                            ImageMargin="10"
                            DisabledImageSource="{DynamicResource PlusFilterBordered2}"
                            DefoultImageSource="{DynamicResource PlusFilterMein}"
                            MouseHoverImageSource="{DynamicResource PlusFilterBordered}"
                                />
                    </Grid>
                </Border>
            </Grid>
            <TextBlock HorizontalAlignment="Left" Margin="1371,303,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</customCtrs:BaseWindow>
