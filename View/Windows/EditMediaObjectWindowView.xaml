<Window x:Class="ModernSort.View.Windows.EditMediaObjectWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernSort.View.Windows"
        xmlns:enums="clr-namespace:ModernSort.Enums"
        mc:Ignorable="d"
        Title="EditMediaObjectWindowView" 
        Height="500" 
        Width="900"
        WindowStyle="none"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ClipToBounds="False"
        >
    <Border
       
Background= "#f7f9fe"
CornerRadius="20"
ClipToBounds="True"
    >
        <Grid>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition 
                    Height="50"
             />
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border
                Grid.Column="0"
                Grid.ColumnSpan="1"
                CornerRadius="20,20,0,0"
                Background="#512f95"
                BorderThickness="0"
         >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="2"
                        ToolTip="Закрыть"
                        Command="{Binding CloseDialog}">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border BorderThickness="0" Margin="0" x:Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/PowerOffButtonIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#a1261d"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="1"
                        ToolTip="Свернуть">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border BorderThickness="0" Margin="0" x:Name="brd" Background="Transparent" CornerRadius="10 20 0 10">
                                        <Image Margin="5" Source="/AppResources/CollapseWindpwIcon.png"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="brd" Property="Background" Value="#492988"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <Grid
                Grid.Row="1"
                >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid
                        x:Name="FilterFilePresenterGrid"
                    Grid.Column="1"
                    >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="75 "/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Border
                            CornerRadius="20 0 0 20"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            >
                                <Grid
                                    xmlns:l="clr-namespace:ModernSort.CustomeControls.TemplateSelectors"
                                    >
                                    <Grid.Resources>
                                        <DataTemplate 
                                            x:Key="Files">
                                            <Border
                                                DataContext="{Binding DataContext,
                                                    RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                Background="Transparent"
                                                >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="60"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <Button
                                                        Margin="5"
                                                        Grid.Row="0"
                                                        Style="{StaticResource Button}"
                                                        Background="#512f95"
                                                        Content="Select file"
                                                        Command="{Binding SelectMultimediaFiles}"/>
                                                    
                                                    <ListView
                                                        
                                                    Grid.Row="1"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                    HorizontalContentAlignment="Center"
                                                    x:Name="MediaFilesList"
                                                    ItemContainerStyle="{StaticResource MediaObjactContenerStyle}"
                                                    ItemsSource="{Binding SelectedFilePaths}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    Padding="0 10 0 0"
                                                    >
                                                        <ListView.Style>
                                                            <Style>
                                                                <Style.Setters>
                                                                    <Setter Property="Validation.ErrorTemplate">
                                                                        <Setter.Value>
                                                                            <ControlTemplate>
                                                                                <Border
                                                                                CornerRadius="15"
                                                                                BorderBrush="#7d4c94" 
                                                                                BorderThickness="2"
                                                                                >
                                                                                    <AdornedElementPlaceholder />
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style.Setters>
                                                            </Style>
                                                        </ListView.Style>
                                                        <ListView.ItemTemplate>

                                                            <DataTemplate>
                                                                <Border
                                                                Background="Transparent"
                                                                x:Name="brd" 
                                                                Width="150" 
                                                                MinHeight="200" 
                                                                CornerRadius="10">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="50"/>
                                                                            <RowDefinition Height="*"/>
                                                                        </Grid.RowDefinitions>
                                                                        <Border 
                                                                        x:Name="InBrd"
                                                                        Grid.Row="0"
                                                                        CornerRadius="10 10 0 0"
                                                                        Background="#7947e1">
                                                                            <StackPanel
                                                                            Orientation="Horizontal"
                                                                            HorizontalAlignment="Right"
                                                                            >
                                                                                <Button
                                                                                ToolTip="Remove media"
                                                                                Content="Выбрать"
                                                                                Height="50"
                                                                                Grid.Column="0"
                                                                                Command="{Binding DataContext.RemoveFileFromList, 
                                                                                    RelativeSource={RelativeSource AncestorType=ListView, AncestorLevel=1}}"
                                                                                CommandParameter="{Binding}"
                                                                                >
                                                                                    <Button.Template>
                                                                                        <ControlTemplate TargetType="Button">
                                                                                            <Border 
                                                                                          BorderThickness="0" 
                                                                                          Margin="0" Name="brd" 
                                                                                          Background="Transparent">
                                                                                                <Image x:Name="icon"
                                                                                                   Margin="5" 
                                                                                                   Source="\AppResources\Pictures\redCrossBorder.png"/>
                                                                                            </Border>
                                                                                            <ControlTemplate.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter TargetName="brd" Property="Background" Value="#653bbb"/>
                                                                                                    <Setter TargetName="brd" Property="CornerRadius" Value="0 10 0 0"/>
                                                                                                    <Setter TargetName="icon" Property="Source" Value="\AppResources\Pictures\redCrossFill.png" />
                                                                                                </Trigger>
                                                                                            </ControlTemplate.Triggers>
                                                                                        </ControlTemplate>
                                                                                    </Button.Template>
                                                                                </Button>
                                                                            </StackPanel>
                                                                        </Border>
                                                                        <Rectangle
                                                                        x:Name="racImg"
                                                                        Stroke="Red"
                                                                        StrokeThickness="5"
                                                                        Margin="10"
                                                                        Grid.Row="1"
                                                                        RadiusX="20"
                                                                        RadiusY="20"
                                                                        >
                                                                            <Rectangle.Fill>
                                                                                <ImageBrush 
                                                                                Stretch="Fill"
                                                                                ImageSource="{Binding ., Converter={StaticResource ToBitmapConverter}}"/>
                                                                            </Rectangle.Fill>
                                                                        </Rectangle>
                                                                    </Grid>
                                                                </Border>
                                                                <DataTemplate.Triggers>
                                                                    <MultiTrigger>
                                                                        <MultiTrigger.Conditions>
                                                                            <Condition Property="IsMouseOver" Value="True" />
                                                                        </MultiTrigger.Conditions>
                                                                        <Setter TargetName="brd" Property="Background" Value="#653bbb" />
                                                                        <Setter TargetName="racImg" Property="StrokeThickness" Value="0" />
                                                                    </MultiTrigger>
                                                                </DataTemplate.Triggers>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                        <ListView.Resources>
                                                            <Style TargetType="ScrollBar" BasedOn="{StaticResource WhiteScrollBarStyle}"/>
                                                        </ListView.Resources>
                                                        <ListView.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel 
                                                                Orientation="Horizontal"  
                                                                HorizontalAlignment="Center"
                                                                />
                                                            </ItemsPanelTemplate>
                                                        </ListView.ItemsPanel>
                                                    </ListView>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                        <DataTemplate
                                            x:Key="Filters">
                                            <Border
                                            Background="Blue"
                                            >
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    FontSize="30"
                                                    Foreground="Red"
                                                    Style="{StaticResource SpanDefoult}"
                                                    Text="Filters cooming soon"
                                                    />
                                            </Border>
                                        </DataTemplate>
                                        <l:EditMediaObjectFunctionTemplateSelector
                                            x:Key="FunctionSelector"
                                            FilesTemplate="{StaticResource Files}"
                                            FiltersTemplate="{StaticResource Filters}"
                                            />
                                    </Grid.Resources>
                                    <ContentControl
                                        ContentTemplateSelector="{StaticResource FunctionSelector}"
                                        Content="{Binding Path=PagePresenter}"
                                        >
                                    </ContentControl>
                                </Grid>
                            </Border>

                            <Button Grid.Column="1"
                                Grid.Row="0"/>

                            <Button Grid.Column="1"
                                Grid.Row="1"/>

                        </Grid>

                        <Border
                        Margin="0 10 0 0"
                        CornerRadius="60  0 20 0"
                        Background="#512f95"
                        Grid.Row="1"
                        >
                            <TextBlock
                            Margin="15 0 20 0"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="#f7f9fe"
                            FontSize="20"
                            Style="{StaticResource SpanDefoult}"
                            >
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource ValidationStringConverter}">
                                        <Binding
                                            ElementName="TytleTbx" 
                                            Path= "(Validation.Errors)[0].ErrorContent"
                                            Mode="OneWay"
                                            />
                                        <Binding/>
                                        <Binding
                                            ElementName="DescryptioonTbx" 
                                            Path= "(Validation.Errors)[0].ErrorContent"
                                            Mode="OneWay"
                                            />
                                        <Binding
                                            ElementName="FilterFilePresenterGrid.MediaFilesLists" 
                                            Path= "(Validation.Errors)[0].ErrorContent"
                                            Mode="OneWay"
                                            />
                                        <Binding/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock> 
                        </Border>

                    </Grid>

                    <Grid
                    Grid.Column="0"
                    >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <Grid
                        Grid.Row="0"
                        >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button
                            Grid.Column="0"
                            Margin="10"
                            ToolTip="Delete Category"
                            Command="{Binding DeleteMediaObjact}"
                                >
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                        x:Name="brd"
                                        CornerRadius="10"
                                        BorderThickness="5"
                                        BorderBrush="#bb432c"
                                        Background="Transparent"
                                        >
                                            <Image
                                            x:Name="img"
                                            Margin="5"
                                            Source="/AppResources/Pictures/trashCanCloseRed.png"
                                            />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" 
                                            Value="true">
                                                <Setter 
                                                TargetName="img" 
                                                Property="Source"
                                                Value="\AppResources\Pictures\trashCanOpenWhite.png"/>
                                                <Setter
                                                TargetName="brd" 
                                                Property="Background"
                                                Value="#bb432c"/>
                                                <Setter
                                                TargetName="brd" 
                                                Property="BorderThickness"
                                                Value="0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <TextBox 
                            Grid.Column="1"
                            x:Name="TytleTbx"
                            ToolTip="Category Tytle"
                            FontSize="30"
                            Foreground="#6795de"
                            TextWrapping="Wrap"
                            Background="#ccd5f0"
                            Text="{Binding MediaObjectTytle, Mode=TwoWay}"
                            Style="{StaticResource TuskDataTextBoxStyle}"
                            Margin="10"
                            Padding="10"
                            />
                        </Grid>

                        <TextBox
                        x:Name="DescryptioonTbx"
                        ToolTip="Category  Descryption"
                        Grid.Row="1"
                        FontSize="30"
                        Foreground="#6795de"
                        TextWrapping="Wrap"
                        Background="#ccd5f0"
                        Text="{Binding MediaObjectDescryption, Mode=TwoWay}"
                        Style="{StaticResource TuskDataTextBoxStyle}"
                        Margin="10"
                        Padding="10"
                        />

                        <Button
                        Style="{StaticResource Button}"
                        Background="#512f95"
                        Margin="10"
                        Grid.Row="2"
                        Content="Apply Edit"
                            Command="{Binding EditMediaObject}"
                        />

                    </Grid>

                </Grid>

            </Grid>

        </Grid>
    </Border>
</Window>
